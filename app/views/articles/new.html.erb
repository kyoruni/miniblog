<%= form_for(@article) do |f| %>
  <div class="form-group">
    <div class="card shadow-sm">
      <div class="card-body">
        <h5 class="card-title">新規投稿</h5>
        <div class="card-text">
          <div class="mb-1">
            <%= f.label  :タイトル,   class: "text-muted" %>
            <%= f.text_field :title, class: "form-control" %>
          </div>
          <div class="mb-1">
            <%= f.label  :本文,     class: "text-muted" %>
            <%= f.text_area :text, class: "form-control", rows: 3 %>
          </div>
        </div>
      </div>
      <div class="card-footer">
        <%= button_tag type: "submit", class: "btn btn-info rounded-circle p-0", style: "width:2rem;height:2rem;" do %>
          <%= fa_icon("plus") %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>